{
  "name": "vscode-assistive-tools",
  "displayName": "Assistive Tools",
  "description": "VSCode辅助工具插件，提供枚举悬停转换和YAPI接口类型生成等功能。支持TypeScript/JavaScript枚举值到Map对象和Option数组的自动转换，以及从YAPI接口文档自动生成TypeScript类型定义。",
  "version": "0.0.4",
  "publisher": "ihopefulChina",
  "repository": {
    "type": "git",
    "url": "https://github.com/ihopefulChina/vscode-assistiveTools.git"
  },
  "homepage": "https://github.com/ihopefulChina/vscode-assistiveTools#readme",
  "bugs": {
    "url": "https://github.com/ihopefulChina/vscode-assistiveTools/issues"
  },
  "license": "MIT",
  "icon": "./static/logo.png",
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "keywords": [
    "enum",
    "typescript",
    "javascript",
    "code-generation",
    "assistive"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onCommand:assistiveTools.generateYapiInterface"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "assistiveTools.convertEnum",
        "title": "转换枚举"
      },
      {
        "command": "assistiveTools.generateYapiInterface",
        "title": "Assistive: 生成 YAPI 请求/响应 Interface"
      }
    ],
    "configuration": {
      "title": "Assistive Tools",
      "properties": {
        "assistiveTools.yapiToken": {
          "type": "string",
          "default": "",
          "markdownDescription": "YAPI 的 `_yapi_token` 值，用于在命令中拉取接口详情并生成请求/响应 interface。"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node-fetch": "^2.6.11",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "typescript": "^4.9.4"
  }
}
